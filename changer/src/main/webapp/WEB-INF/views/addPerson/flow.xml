<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<on-start>
		<evaluate expression="changeController.initializeChange()" result="flowScope.change"></evaluate>
	</on-start>

    <!-- A sample view state -->
    <view-state id="declareChange" view="addPerson/declareChange">
    	<transition on="success" to="view-state-2"/>
    	<transition on="cancel" to="end-state"/>
    	<transition to="enterPersonDetails" on="proceed"></transition>
    </view-state>

    <view-state id="enterPersonDetails" view="addPerson/enterPersonDetails">
    	<transition on="cancel" to="end-state"/>
    	<transition to="reviewChanges" on="proceed"></transition>
    </view-state>

    <!-- A sample end state -->
    <end-state id="end-state" view="addPerson/end-state"/>
	
    <view-state id="reviewChanges">
    	<transition to="end-state" on="finish"></transition>
    </view-state>
</flow>
